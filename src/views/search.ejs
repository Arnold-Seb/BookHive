<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="color-scheme" content="light dark">
  <title><%= title || 'Search Books' %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Poppins:wght@500;600&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <script>
    (function(){ try{
      document.documentElement.classList.toggle('dark', localStorage.getItem('bh-dark')==='1');
    }catch(e){} })();
  </script>
</head>
<body>
  <header>
    <h1>ðŸ“š BookHive</h1>
    <div class="header-actions">
      <form action="/auth/logout" method="post" style="display:inline-block; margin-left:12px;">
        <button type="submit" class="logout-btn">Logout</button>
      </form>

      <label class="switch" title="Toggle dark mode" tabindex="0" role="switch" aria-checked="false" id="darkSwitch">
        <input id="darkToggle" type="checkbox" />
        <span class="slider"></span>
      </label>
    </div>
  </header>

  <section class="glass">
    <h2 style="margin-top:0; font-weight:600;">Search Books</h2>
    <input id="searchBox" type="text" placeholder="Search by title, author, ISBNâ€¦" />
    <form onsubmit="doSearch();return false;" style="justify-content:center;">
      <button type="submit">Search</button>
      <% if (user && user.role === 'admin') { %>
        <a href="/admin" style="display:inline-block; text-decoration:none; margin-left:10px;">
          <button type="button">Add Book</button>
        </a>
      <% } %>
    </form>
  </section>

  <section class="stats-section">
    <div class="stat-card total"><h3>Total Books</h3><p id="statTotal">â€”</p></div>
    <div class="stat-card available"><h3>Available</h3><p id="statAvailable">â€”</p></div>
    <div class="stat-card borrowed"><h3>Borrowed</h3><p id="statBorrowed">â€”</p></div>
  </section>

  <section class="glass">
    <div style="display:flex;justify-content:space-between;align-items:center; margin-bottom:10px;">
      <h3 style="margin:0;">Results</h3>
      <div class="muted">Hi, <%= user?.name || user?.email %> (<%= user?.role %>)</div>
    </div>
    <table id="resultsTable">
      <thead>
        <tr><th>Title</th><th>Author</th><th>ISBN</th><th>Status</th><th>Actions</th></tr>
      </thead>
      <tbody id="resultsBody"></tbody>
    </table>
  </section>

  <div id="notification"></div>

  <footer>
    Â© BookHive
    <!-- removed footer logout -->
  </footer>

  <script>
    // Dark mode controller (click + keyboard)
    (function(){
      var KEY='bh-dark';
      function set(flag){
        document.documentElement.classList.toggle('dark', !!flag);
        try{ localStorage.setItem(KEY, flag ? '1':'0'); }catch(e){}
        var t=document.getElementById('darkToggle');
        var sw=document.getElementById('darkSwitch');
        if(t){ t.checked = !!flag; }
        if(sw){ sw.setAttribute('aria-checked', !!flag); }
      }
      document.addEventListener('DOMContentLoaded', function(){
        var saved=false; try{ saved = localStorage.getItem(KEY)==='1'; }catch(e){}
        set(saved);
        var t=document.getElementById('darkToggle');
        var sw=document.getElementById('darkSwitch');
        if(t){ t.addEventListener('change', e => set(e.target.checked)); }
        if(sw){
          sw.addEventListener('click', ev => { if(ev.target!==t) set(!t.checked); });
          sw.addEventListener('keydown', ev => {
            if(ev.key===' '||ev.key==='Enter'){ ev.preventDefault(); set(!t.checked); }
          });
        }
      });
    })();

    // Demo search (placeholder data)
    function doSearch(){
      const q = document.getElementById('searchBox').value.trim();
      if(!q){ notify('Please type a query.', true); return; }
      const rows = [
        {title:`${q} â€” A Tale`, author:"Alex River", isbn:"978000000001", status:"Available"},
        {title:`Learning ${q}`, author:"B. Harper", isbn:"978000000002", status:"Borrowed"},
        {title:`Advanced ${q}`, author:"C. Quinn", isbn:"978000000003", status:"Available"},
      ];
      const body = document.getElementById('resultsBody');
      body.innerHTML = rows.map(r => `
        <tr>
          <td title="${r.title}">${r.title}</td>
          <td title="${r.author}">${r.author}</td>
          <td>${r.isbn}</td>
          <td>${r.status}</td>
          <td>
            <button onclick="notify('Requested: ${r.title}')">Request</button>
            <button onclick="notify('Details of ${r.title}')">Details</button>
          </td>
        </tr>`).join('');
      document.getElementById('statTotal').textContent = rows.length;
      document.getElementById('statAvailable').textContent = rows.filter(r=>r.status==='Available').length;
      document.getElementById('statBorrowed').textContent = rows.filter(r=>r.status==='Borrowed').length;
      notify('Search complete');
    }
    function notify(msg, isError){
      const n = document.getElementById('notification');
      n.textContent = msg;
      n.className = isError ? 'error show' : 'success show';
      setTimeout(() => n.classList.remove('show'), 2200);
    }
  </script>
</body>
</html>
