<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="color-scheme" content="light dark">
  <title><%= title || 'Search Books' %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Poppins:wght@500;600&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <script>
    (function(){ try{
      document.documentElement.classList.toggle('dark', localStorage.getItem('bh-dark')==='1');
    }catch(e){} })();
  </script>
</head>
<body>
  <header>
    <h1>ðŸ“š BookHive</h1>
    <div class="header-actions">
      <form action="/auth/logout" method="post" style="display:inline-block; margin-left:12px;">
        <button type="submit" class="logout-btn">Logout</button>
      </form>

      <label class="switch" title="Toggle dark mode" tabindex="0" role="switch" aria-checked="false" id="darkSwitch">
        <input id="darkToggle" type="checkbox" />
        <span class="slider"></span>
      </label>
    </div>
  </header>

  <section class="glass">
    <h2 style="margin-top:0; font-weight:600;">Search Books</h2>
    <input id="searchBox" type="text" placeholder="Search by title, authorâ€¦" />
    <form onsubmit="return false;" style="justify-content:center;">
      <button type="button" id="searchBtn">Search</button>
      <% if (user && user.role === 'admin') { %>
        <a href="/admin" style="display:inline-block; text-decoration:none; margin-left:10px;">
          <button type="button">Add Book</button>
        </a>
      <% } %>
    </form>
  </section>

  <!-- Stats -->
  <section class="stats-section">
    <div class="stat-card total"><h3>Total Books</h3><p id="statTotal">â€”</p></div>
    <div class="stat-card available"><h3>Available</h3><p id="statAvailable">â€”</p></div>
    <div class="stat-card borrowed"><h3>My Borrowed</h3><p id="statBorrowed">â€”</p></div>
  </section>

  <!-- Results -->
  <section class="glass results">
    <div style="display:flex;justify-content:space-between;align-items:center; margin-bottom:10px;">
      <h3 style="margin:0;">Results</h3>
      <div class="muted">Hi, <%= user?.name || user?.email %> (<%= user?.role %>)</div>
    </div>
    <table id="resultsTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Genre</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Rating</th>
          <% if (user && user.role !== 'admin') { %>
            <th>Actions</th>
          <% } %>
        </tr>
      </thead>
      <tbody id="resultsBody" data-is-admin="<%= user?.role === 'admin' %>"></tbody>
    </table>
  </section>

  <!-- Loan History (hide for admins) -->
  <% if (user && user.role !== 'admin') { %>
  <section class="glass" style="margin-top:20px;">
    <h3 style="margin:0 0 10px 0;">Loan History</h3>
    <table id="loanHistoryTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>Borrow Date</th>
          <th>Return Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody id="loanHistoryBody">
        <tr><td colspan="4">Loading...</td></tr>
      </tbody>
    </table>
  </section>
  <% } %>

  <!-- Borrow Modal -->
  <div id="borrowModal" class="modal" style="display:none;">
    <div class="modal-content">
      <h2>Confirm Borrow</h2>
      <p>Are you sure you want to borrow this book?</p>
      <div class="modal-actions">
        <button type="button" id="cancelBorrow" class="btn-cancel">Cancel</button>
        <button type="button" id="confirmBorrow" class="btn-confirm">Borrow</button>
      </div>
    </div>
  </div>

  <!-- Return Modal -->
  <div id="returnModal" class="modal" style="display:none;">
    <div class="modal-content">
      <h2>Confirm Return</h2>
      <p>Are you sure you want to return this book?</p>
      <div class="modal-actions">
        <button type="button" id="cancelReturn" class="btn-cancel">Cancel</button>
        <button type="button" id="confirmReturn" class="btn-confirm">Return</button>
      </div>
    </div>
  </div>

  <!-- Review Modal -->
  <div id="reviewModal" class="modal" style="display:none;">
    <div class="modal-content">
      <h2>Rate & Review</h2>
      <div style="margin:8px 0;">
        <label>Rating (1â€“5): </label>
        <input id="reviewRating" type="number" min="1" max="5" step="1"/>
      </div>
      <div style="margin:8px 0;">
        <label>Comment: </label>
        <textarea id="reviewComment" rows="4" style="width:100%;"></textarea>
      </div>
      <div class="modal-actions">
        <button type="button" id="cancelReview" class="btn-cancel">Cancel</button>
        <button type="button" id="saveReview" class="btn-confirm">Save</button>
      </div>
    </div>
  </div>

  <!-- Reviews List Modal -->
  <div id="reviewsListModal" class="modal" style="display:none;">
    <div class="modal-content">
      <h2 style="margin-top:0">Reviews</h2>
      <div id="reviewsListBody" style="max-height:300px; overflow:auto;"></div>
      <div class="modal-actions" style="margin-top:14px;">
        <button type="button" id="closeReviewsList" class="btn-cancel">Close</button>
      </div>
    </div>
  </div>

  <div id="notification"></div>

  <footer>
    Â© BookHive
  </footer>

  <script>
    window.CURRENT_USER_EMAIL = "<%= user?.email %>";
    window.CURRENT_USER_ROLE = "<%= user?.role %>";
  </script>

  <script src="/js/search.js"></script>

  <style>
    /* Expand the results container (override .glass max-width from style.css) */
    .glass.results {
      max-width: 1400px !important;
      width: min(98vw, 1400px);
      margin-left: auto;
      margin-right: auto;
    }

    /* Table: use full width & prevent overlap */
    #resultsTable {
      width: 100%;
      table-layout: fixed;           /* keeps columns from bleeding */
      border-collapse: collapse;
    }

    #resultsTable th,
    #resultsTable td {
      padding: 12px 14px;
      vertical-align: middle;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 15px;
    }

    /* Let headers wrap so labels don't clip (e.g., Quantity) */
    #resultsTable th {
      overflow: visible;
      text-overflow: clip;
      white-space: normal;
    }

    /* Column widths (looser) */
    #resultsTable th:nth-child(1), #resultsTable td:nth-child(1) { width: 24%; } /* Title   */
    #resultsTable th:nth-child(2), #resultsTable td:nth-child(2) { width: 22%; } /* Author  */
    #resultsTable th:nth-child(3), #resultsTable td:nth-child(3) { width: 16%; } /* Genre   */
    #resultsTable th:nth-child(4), #resultsTable td:nth-child(4) { width: 10%; } /* Quantity*/
    #resultsTable th:nth-child(5), #resultsTable td:nth-child(5) { width: 12%; } /* Status  */
    #resultsTable th:nth-child(6), #resultsTable td:nth-child(6) { width: 8%;  } /* Rating  */
    #resultsTable th:nth-child(7), #resultsTable td:nth-child(7) { width: 18%; } /* Actions */

    /* Center numeric/icon-ish columns */
    #resultsTable td:nth-child(4),
    #resultsTable td:nth-child(5),
    #resultsTable td:nth-child(6) { text-align: center; }

    /* Actions: never clip; wrap if needed */
    #resultsTable td .actions-cell {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;               /* allow wrapping */
      justify-content: flex-end;
      align-items: center;
    }
    #resultsTable td { overflow: visible; }

    /* Compact action buttons */
    #resultsTable td .actions-cell .btn,
    #resultsTable td .actions-cell .btn-request,
    #resultsTable td .actions-cell .btn-return,
    #resultsTable td .actions-cell .btn-view {
      padding: 6px 10px;
      font-size: 12px;
      line-height: 1.1;
    }

    /* keep review inputs readable in dark mode */
    #reviewModal .modal-content input[type="number"],
    #reviewModal .modal-content textarea {
      background: #fff !important;
      color: #111827 !important;
      border: 1px solid #cbd5e1;
      border-radius: 8px;
      padding: 8px 10px;
      width: 100%;
      box-sizing: border-box;
    }

    /* Optional: widen other glass sections a bit too for visual consistency */
    .glass:not(.results) {
      max-width: 1200px;
      width: min(96vw, 1200px);
    }

    @media (max-width: 900px) {
      /* give Actions extra room on narrow screens */
      #resultsTable th:nth-child(7), #resultsTable td:nth-child(7) { width: 22%; }
      #resultsTable th:nth-child(1), #resultsTable td:nth-child(1) { width: 22%; }
      #resultsTable th:nth-child(2), #resultsTable td:nth-child(2) { width: 18%; }
    }
  </style>
</body>
</html>
